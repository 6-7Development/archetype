{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build && cp -r dist/public/* server/public/ 2>/dev/null || mkdir -p server/public && cp -r dist/public/* server/public/"
  },
  "deploy": {
    "startCommand": "./railway-start.sh",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "nixpacksConfig": {
    "providers": ["node"],
    "node": {
      "version": "20"
    }
  }
}